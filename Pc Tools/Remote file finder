$TxtFile = "C:\TEMP\XXXXX.txt"
$pcs = Get-Content $TxtFile

#$pcs = "bri_bgr_a0327"

foreach($pc in $pcs){
$viso = ""

programpath = "\C$\path to search"
	
$path = "\\" + $pc + $programpath
#$path

$location = Get-ChildItem -Path $path -Recurse -Filter "*file to look for*"

$Program = $location.fullname

$Program

}

